<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_margin="16sp"
        android:layout_marginTop="10sp"
        >

        <ImageView
        android:id="@+id/imgUsuarioApp"
        android:layout_marginTop="20dp"
        android:layout_width="130sp"
        android:layout_height="110sp"
        android:src="@drawable/persona"
        />
    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center"
    >
    <TextView
        android:id="@+id/txtIdApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgUsuarioApp"
        android:textAlignment="center"
        android:text="ID: 15"
        android:background="#0003DAC5"
        android:textSize="20sp"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
    <TextView
        android:id="@+id/txtUsuarioApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtIdApp"
        android:textAlignment="center"
        android:text="Usuario: ejemplo"
        android:background="#0003DAC5"
        android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:gravity="center">
    <TextView
        android:id="@+id/txtContraApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUsuarioApp"
        android:text="Contra: ******"
        android:background="#0003DAC5"
        android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
    <TextView
        android:id="@+id/txtCorreoApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtContraApp"
        android:text="Email: ejemplo@gmail.com"
        android:textAlignment="center"
        android:background="#0003DAC5"
        android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
    <Button
        android:id="@+id/btnSalirApp"
        android:layout_width="98sp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text=""

        android:textSize="30sp"
        android:background="@drawable/salir"/>
    </LinearLayout>
         </LinearLayout>
</LinearLayout>